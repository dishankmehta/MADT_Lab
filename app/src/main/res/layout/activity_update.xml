<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/updateform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Player Name and Goals"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/updatename"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateform"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter Player Name"
        />

    <EditText
        android:id="@+id/updategoal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatename"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter No of Goals"
        />

    <Button
        android:id="@+id/updatebutton"
        android:text="Update Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updategoal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/deletebutton"
        android:text="Delete Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updategoal"
        android:layout_toRightOf="@+id/updatebutton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>


</RelativeLayout>
